                                      Height="50" 
                                      Canvas.Left="10" 
                                      Canvas.Top="10" 
                                      Stretch="Fill" 
                                      Fill="#FF000000" 
                                      Data="F1 M 25.3333,23.75L 50.6667,23.75C 51.5411,23.75 51.8541,27.3125 51.8541,27.3125L 24.1458,27.3125C 24.1458,27.3125 24.4589,23.75 25.3333,23.75 Z M 35.625,19.7917L 40.375,19.7917C 40.8122,19.7917 41.9583,20.9378 41.9583,21.375C 41.9583,21.8122 40.8122,22.9584 40.375,22.9584L 35.625,22.9584C 35.1878,22.9584 34.0416,21.8122 34.0416,21.375C 34.0416,20.9378 35.1878,19.7917 35.625,19.7917 Z M 27.7083,28.5L 48.2916,28.5C 49.1661,28.5 49.875,29.2089 49.875,30.0834L 48.2916,53.8334C 48.2916,54.7078 47.5828,55.4167 46.7083,55.4167L 29.2917,55.4167C 28.4172,55.4167 27.7083,54.7078 27.7083,53.8334L 26.125,30.0834C 26.125,29.2089 26.8339,28.5 27.7083,28.5 Z M 30.0833,31.6667L 30.4792,52.25L 33.25,52.25L 32.8542,31.6667L 30.0833,31.6667 Z M 36.4167,31.6667L 36.4167,52.25L 39.5833,52.25L 39.5833,31.6667L 36.4167,31.6667 Z M 43.1458,31.6667L 42.75,52.25L 45.5208,52.25L 45.9167,31.6667L 43.1458,31.6667 Z "/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                    <Button Name="PreviousButton" 
                            Style="{StaticResource TabButtonFirst}" 
                            DockPanel.Dock="Left" 
                            Width="25" 
                            Margin="1" 
                            Click="PreviousButton_Click">
                        <Viewbox>
                            <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                                    x:Name="appbar_navigate_previous" 
                                    Width="76" 
                                    Height="76" 
                                    Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                                <Path Width="27.3125" 
                                      Height="31.6667" 
                                      Canvas.Left="22.1667" 
                                      Canvas.Top="22.1667" 
                                      Stretch="Fill" 
                                      Fill="#FF000000" 
                                      Data="F1 M 33.6458,38L 49.4792,53.8333L 38.7917,53.8333L 22.1667,38L 38.7917,22.1667L 49.4792,22.1667L 33.6458,38 Z "/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                    <Button Name="NextButton" 
                            Style="{StaticResource TabButtonFirst}" 
                            DockPanel.Dock="Left" 
                            Width="25" 
                            Margin="1" 
                            Click="NextButton_Click">
                        <Viewbox>
                            <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                                    x:Name="appbar_navigate_next" 
                                    Width="76" 
                                    Height="76" 
                                    Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                                <Path Width="27.3125" 
                                      Height="31.6667" 
                                      Canvas.Left="26.5208" 
                                      Canvas.Top="22.1667" 
                                      Stretch="Fill" 
                                      Fill="#FF000000" 
                                      Data="F1 M 42.3542,38L 26.5208,53.8333L 37.2083,53.8333L 53.8333,38L 37.2083,22.1667L 26.5208,22.1667L 42.3542,38 Z "/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                </DockPanel>
                <ListView Name="lvUsers" 
                          BorderThickness="0" 
                          VirtualizingStackPanel.IsVirtualizing="True" 
                          VirtualizingStackPanel.VirtualizationMode="Recycling" 
                          SelectionMode="Single"
                          Margin="5,65,5,35" 
                          ItemsSource="{Binding Mode=OneWay}" 
                          d:DataContext="{d:DesignInstance {x:Type local:MainWindow}}"  
                          Background="White" 
                          Foreground="Black" 
                          ScrollViewer.CanContentScroll="True" 
                          Panel.ZIndex="5" 
                          RenderTransformOrigin="1,0" 
                          Padding="0" 
                          Grid.ColumnSpan="3" 
                          SelectionChanged="LvUsers_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Style="{StaticResource tbkStyle}">
                                    <TextBlock.Inlines>
                                        <Run Text="_________________________________________"></Run>
                                    </TextBlock.Inlines>
                                </TextBlock>
                                <TextBlock Style="{StaticResource tbkStyle}" 
                                           FontSize="12" 
                                           FontWeight="Bold">
                                    <TextBlock.Inlines>
                                        <Run Text="{Binding primaryTitle}"></Run>
                                    </TextBlock.Inlines>
                                </TextBlock>
                                <TextBlock Style="{StaticResource tbkStyle}">
                                    <TextBlock.Inlines>
                                        <Run Text=" "></Run>
                                        <Run Text="{Binding startYear}"></Run>
                                    </TextBlock.Inlines>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock Background="LightGray" 
                       Padding="5,1,1,1" 
                       TextWrapping="Wrap" 
                       Text="Record(s):" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       Height="25" Width="55" 
                       FontSize="10" 
                       Margin="5,0,0,5"/>
                <TextBlock Name="RecordsCountTxtbx"
                       Background="LightGray" 
                       HorizontalAlignment="left" 
                       VerticalAlignment="Bottom" 
                       Padding="5,1,1,1" 
                       Margin="55,0,0,5" 
                       TextWrapping="Wrap" 
                       Text="{Binding recordsCount}"
                       Height="25" 
                       Width="150" 
                       FontSize="10" Grid.ColumnSpan="3"/>
                <Border BorderBrush="MediumTurquoise" 
                        BorderThickness="1" 
                        Grid.ColumnSpan="3" />
            </Grid>
        </Grid>
        <Grid x:Name="Grid_Column_1" 
              Grid.Column="1"
              Background="White" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Top" 
              Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Background="White" 
                  HorizontalAlignment="Left" 
                  Height="50" 
                  Margin="5,5,5,5" 
                  VerticalAlignment="Top" 
                  Grid.Row="0">
                <Grid HorizontalAlignment="Center" 
                      VerticalAlignment="Center" 
                      Background="White" 
                      Height="50" 
                      Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" 
                           Grid.Row="0" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="1">Movie ID</Label>
                    <Label Grid.Column="0" 
                           Grid.Row="1" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="1">Genres</Label>
                    <TextBlock Grid.Column="1" 
                               Grid.Row="0" 
                               Grid.ColumnSpan="2"
                               FontSize="9" 
                               Background="LightGray" 
                               Margin="1" 
                               Text="{Binding tconst}"/>
                    <TextBlock Grid.Column="1" 
                               Grid.Row="1" 
                               FontSize="9" 
                               Margin="1" 
                               Text="{Binding genres}"/>
                    <Label Grid.Column="2" 
                           Grid.Row="0" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="1">Original Title</Label>
                    <Label Grid.Column="2" 
                           Grid.Row="1" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="1">Primary Title</Label>
                    <TextBlock Grid.Column="3" 
                               Grid.Row="0" 
                               FontSize="9" 
                               Margin="1" 
                               Text="{Binding originalTitle}"/>
                    <TextBlock Grid.Column="3" 
                               Grid.Row="1"
                               FontSize="9" 
                               Margin="1" 
                               Text="{Binding primaryTitle}"/>
                    <Label Grid.Column="4" 
                           Grid.Row="0" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="1">Start Year</Label>
                    <Label Grid.Column="4" 
                           Grid.Row="1" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="1">End Year</Label>
                    <TextBlock Grid.Column="5" 
                               Grid.Row="0" 
                               FontSize="9" Margin="1" 
                               Text="{Binding startYear}"/>
                    <TextBlock Grid.Column="5" 
                               Grid.Row="1" 
                               FontSize="9" 
                               Text="{Binding endYear}"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" 
                  Margin="0,5,0,0" >
                <DockPanel LastChildFill="True">
                    <TextBlock Text="{Binding tconst}"
                           Background="MediumTurquoise"
                           Foreground="White"
                           FontSize="10"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Top"
                           Padding="5,1,1,1"
                           Height="15"
                           Margin="5,0,0,0"/>
                </DockPanel>
                <Grid Name="EditGrid" 
                      Background="White" 
                      Margin="5,25,5,5" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Stretch"  
                      Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Label BorderBrush="MediumTurquoise" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="1" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,1" 
                           Height="20">Movie ID</Label>
                    <Label BorderBrush="MediumTurquoise" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="2" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,5" 
                           Height="20">Genre</Label>
                    <Label BorderBrush="Purple" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="3" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,1" 
                           Height="20">Primary Title</Label>
                    <Label BorderBrush="Purple" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="4" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,5" 
                           Height="20">Original Title</Label>
                    <Label BorderBrush="SaddleBrown" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="5" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,1" 
                           Height="20">Start Year</Label>
                    <Label BorderBrush="SaddleBrown" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="6" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,5" 
                           Height="20">End Year</Label>
                    <Label BorderBrush="ForestGreen" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="7" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,1" 
                           Height="20">Title Type</Label>
                    <Label BorderBrush="ForestGreen" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="8" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,5" 
                           Height="20">Runtime(minutes)</Label>
                    <Label BorderBrush="MediumBlue" 
                           BorderThickness="2 0 0 0" 
                           Grid.Column="0" 
                           Grid.Row="9" 
                           FontSize="9" 
                           Background="LightGray" 
                           Margin="5,1,1,1" 
                           Height="20">Adult Rating</Label>
                    <TextBox Name="tconsttxtbx" 
                             Grid.Column="1" 
                             Grid.Row="1" 
                             BorderThickness="1" 
                             BorderBrush="LightGray" 
                             FontSize="9" 
                             Grid.ColumnSpan="2" 
                             VerticalAlignment="Center" 
                             Height="20" 
                             Margin="1,1,1,1" 
                             Text="{Binding tconst}"/>
                    <TextBox Name="genrestxtbx" 
                             Grid.Column="1" 
                             Grid.Row="2" 
                             BorderThickness="1" 
                             BorderBrush="LightGray" 
                             FontSize="9" 
                             Grid.ColumnSpan="2" 
                             VerticalAlignment="Center"
                             Height="20" 
                             Margin="1,1,1,5" 
                             Text="{Binding genres}"/>
                    <TextBox Name="primaryTitletxtbx" 
                             Grid.Column="1" 
                             Grid.Row="3" 
                             FontSize="9" 
                             Grid.ColumnSpan="2" 
                             VerticalAlignment="Center" 
                             Height="20" 
                             Margin="1,1,2,1" 
                             Text="{Binding primaryTitle}" />
                    <TextBox Name="originalTitletxtbx" 
                             Grid.Column="1" 
                             Grid.Row="4" 
                             FontSize="9" 
                             Grid.ColumnSpan="2" 
                             VerticalAlignment="Center" 
                             Height="20" 
                             Margin="1,1,1,5" 
                             Text="{Binding originalTitle}" />
                    <TextBox Name="startYeartxtbx" 
                             Grid.Column="1" 
                             Grid.Row="5" 
                             FontSize="9" 
                             Grid.ColumnSpan="2"
                             VerticalAlignment="Center" 
                             Height="20" 
                             Margin="1,1,2,1" 
                             Text="{Binding startYear}" />
                    <TextBox Name="endYeartxtbx" 
                             Grid.Column="1" 
                             Grid.Row="6" 
                             FontSize="9" 
                             Grid.ColumnSpan="2" 
