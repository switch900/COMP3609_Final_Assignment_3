                </Button>
                <DockPanel Background="White" 
                       HorizontalAlignment="Left" 
                       Height="25" 
                       LastChildFill="False" 
                       VerticalAlignment="top"  
                       Margin="5,35,0,0" 
                       Panel.ZIndex="5" 
                       Grid.ColumnSpan="3">
                    <Button x:Name="addMovieButton" 
                        Style="{StaticResource TabButtonFirst}" 
                        DockPanel.Dock="Left" 
                        Width="25" 
                        Margin="1" 
                        Click="AddMovieButton_Click">
